header_background = #e76059
disabled_color = #ee8d88
modal_background = #d7d7d7

.Modal
  top 20%
  left 0
  margin 0 auto

.upload-modal
  .modal-header
    background header_background
    box-shadow 0px 5px 5px #c9554e
    border-bottom none
    .title
      color disabled_color
      &.active
        color white
        .number
          border-color white
      .number
        border-radius 100px
        width 36px
        height 36px
        padding 4px 8px
        background header_background
        border 1px solid disabled_color
        text-align center
        margin-right 6px

  .modal-body
    background modal_background

    .form-upload
      width 234px
      margin 0 auto
      .upload-picture
        background #262626
        height 170px
        line-height 170px
        margin-bottom 0
        text-align center
        button
          position relative
          top 70px
      .project-title
        background white
        height 170px
        padding 12px

  .modal-footer
    background modal_background
    border-top-color #888

    button
      color #4b4b4b
      text-transform capitalize
      text-decoration none
      .glyphicon
        font-size 16px
        margin-top 2px
      &.btn-cancel:hover
        color #f00
      &.btn-continue:hover
        color #008000
