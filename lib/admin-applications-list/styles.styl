border-color = #adaa94

#admin-applications-list
  table.table
    background white
    border 2px solid border-color

    thead tr th
      border-bottom 2px solid border-color


    tbody
      color #5a5d60
      tr
        &:hover
          background-color #f7f7f9

        td
          border-top 1px solid border-color
          vertical-align middle
          &:first-child
            font-weight bold

          .btn-action img
            max-width 32px
            margin 0 10px